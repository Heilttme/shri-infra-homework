{
  "name": "infra-hw",
  "version": "1.1.4",
  "scripts": {
    "updcl": "release-it",
    "start": "nodemon ./src/server/index.ts",
    "build": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "test": "jest",
    "lint": "eslint ./src",
    "build:docker": "docker build -t shri-infra .",
    "start:docker": "docker run -d -p 3000:3000 heilttme/test",
    "prepare": "husky"
  },
  "dependencies": {
    "@bem-react/classname": "^1.6.0",
    "@faker-js/faker": "^8.4.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/express": "^4.17.21",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.7.2",
    "bootstrap": "^5.3.3",
    "chai": "^5.1.1",
    "express": "^4.19.2",
    "immer": "^10.1.1",
    "nodemon": "^3.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.23.1",
    "redux": "^5.0.1",
    "redux-observable": "^3.0.0-rc.2",
    "release-it": "^17.6.0",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^29.3.1",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.2.4",
    "@types/mini-css-extract-plugin": "^2.5.0",
    "@types/node": "^20.13.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-helmet": "^6.1.11",
    "@types/webpack": "^5.28.5",
    "conventional-changelog-cli": "^5.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "globals": "^15.8.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "sass": "^1.77.4",
    "sass-loader": "^14.2.1",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.16.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
